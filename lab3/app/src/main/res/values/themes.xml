<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Lab3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Lab3" parent="Base.Theme.Lab3" />

    <!-- Стиль текста -->
    <style name="textviewStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль кнопки -->
    <style name="btnviewstyle">
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль картинки -->
    <style name="imgviewstyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <!-- Стиль ввода текста -->
    <style name="edittextviewstyle">
        <item name="android:textSize">35sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>